<% title t('.page_title') %>
<% step_header(path: applications_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary(@form_object) %>
    <h1 class="govuk-heading-xl">Case Details</h1>
    <%= step_form @form_object do |f| %>
      <%= f.govuk_text_field :ufn, width: 'one-third', autocomplete: 'off' %>
      <%= f.govuk_text_field :main_offence, width: 'one-third', autocomplete: 'off' %>
      <p class="govuk-body">Enter the name of an offence, or select one from the suggestions that appear when you start
        to enter the name</p>
      <%= f.govuk_date_field :main_offence_date, maxlength_enabled: true %>
      <%= f.govuk_radio_buttons_fieldset :assigned_counsel, legend: { tag: 'h3', size: 'm' } do %>
        <%= f.govuk_radio_button :assigned_counsel, CaseDetails::THERE_WAS_AN_ASSIGNED_COUNSEL.value do %>
        <% end %>
        <%= f.govuk_radio_button :assigned_counsel, CaseDetails::THERE_WAS_AN_ASSIGNED_COUNSEL.value do %>
        <% end %>
      <% end %>
      <%= f.govuk_radio_buttons_fieldset :unassigned_counsel, legend: { tag: 'h3', size: 'm' } do %>
        <%= f.govuk_radio_button :unassigned_counsel, CaseDetails::THERE_WAS_AN_UNASSIGNED_COUNSEL.value do %>
        <% end %>
        <%= f.govuk_radio_button :unassigned_counsel, CaseDetails::THERE_WAS_AN_UNASSIGNED_COUNSEL.value do %>
        <% end %>
      <% end %>
      <%= f.govuk_radio_buttons_fieldset :agent_instructed, legend: { tag: 'h3', size: 'm' } do %>
        <%= f.govuk_radio_button :agent_instructed, CaseDetails::THERE_WAS_AN_AGENT_INSTRUCTED.value do %>
        <% end %>
        <%= f.govuk_radio_button :agent_instructed, CaseDetails::THERE_WAS_AN_AGENT_INSTRUCTED.value do %>
        <% end %>
      <% end %>
      <%= f.govuk_radio_buttons_fieldset :remitted_to_magistrate, legend: { tag: 'h3', size: 'm' } do %>
        <%= f.govuk_radio_button :remitted_to_magistrate, CaseDetails::REMITTED_TO_MAGISTRATE.value do %>
        <% end %>
        <%= f.govuk_radio_button :remitted_to_magistrate, CaseDetails::REMITTED_TO_MAGISTRATE.value do %>
        <% end %>
      <% end %>
      <%= f.continue_button(secondary: false) %>
      </div>
      </div>
    <% end %>
